<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"

        android:gravity="center"
        android:text="bbbbb"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/explain"
        android:textColor="#3366d1"
        android:layout_gravity="center"
        android:autoText="false"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="5dp" />


    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="fill_parent"
        android:layout_height="375dp">
        <ListView
            android:id="@+id/list"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </ListView>

    </FrameLayout>

<RelativeLayout
    android:layout_width="356dp"
    android:layout_height="54dp"
    android:layout_gravity="center_horizontal">
    <Button
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:background="@drawable/manage_course"
        android:id="@+id/manageCourse"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toStartOf="@+id/queryButton"
        android:layout_toLeftOf="@+id/queryButton"
        android:layout_marginRight="10dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="64dp"

        android:id="@+id/addButton"
        android:background="@drawable/add"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:id="@+id/queryButton"
        android:background="@drawable/query_button"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/addButton"
        android:layout_toStartOf="@+id/addButton" />

</RelativeLayout>

</LinearLayout>
