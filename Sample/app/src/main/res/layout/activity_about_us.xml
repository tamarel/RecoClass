<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.microsoft.projectoxford.face.samples.AboutUsActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Welcome to my app"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#2349a8"
        android:layout_centerInParent="true"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/logo"

        android:src="@drawable/logo2"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="In this app you could add course and students.\n In addition, you could add photos for all of the students and create an attendance list just by taking a picture.\n
    All of the lists will be saved in the DB, allowing you to run a query and export to mail and cloud.\n
    Enjoy!
    "


    android:id="@+id/info"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#2349a8"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:background="@drawable/buttonshape"
        android:id="@+id/contact_us"
        android:layout_below="@+id/info"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_centerHorizontal="true"
        android:textColor="#fff" />


</RelativeLayout>
