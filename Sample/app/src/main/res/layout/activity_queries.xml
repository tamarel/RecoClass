<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/from"
        android:text="from"
        android:background="@drawable/gradient_spinner"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/until"
        android:text="to"
        android:background="@drawable/gradient_spinner"

        android:layout_below="@+id/from"
        android:layout_alignLeft="@+id/from"
        android:layout_alignStart="@+id/from"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/fromText"
        android:layout_alignTop="@+id/from"
        android:layout_toRightOf="@+id/from"
        android:layout_toEndOf="@+id/from"
        android:layout_marginLeft="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/toText"
        android:layout_alignTop="@+id/until"
        android:layout_toRightOf="@+id/until"
        android:layout_toEndOf="@+id/until"
        android:layout_marginLeft="10dp"
        android:textSize="15dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAction"
        android:background="@drawable/gradient_spinner"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/action"
        android:spinnerMode="dialog"

        android:layout_toLeftOf="@+id/action" />

    <Spinner
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/action"
        android:spinnerMode="dialog"
        android:background="@drawable/gradient_spinner"
         android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/number"
        android:layout_toStartOf="@+id/number"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:hint="Num"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gradient"
        android:height="4dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="2dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="SUBMIT"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/action"
        android:layout_toRightOf="@+id/until"
        android:layout_toEndOf="@+id/until" />

</RelativeLayout>
